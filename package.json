{
  "name": "the-organizer",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "electron-main.js",
  "scripts": {
    "start": "vite --host",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "set NODE_ENV=development && electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.5.3",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.theorganizer.app",
    "productName": "The Organizer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
